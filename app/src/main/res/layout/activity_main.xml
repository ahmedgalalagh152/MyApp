<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="130dp"
        android:id="@+id/rl1">

        <TextView
            android:id="@+id/tx1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONN"
            android:textColor="#FF1744"
            android:textSize="40dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXION"
            android:id="@+id/tx2"
            android:textSize="40dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_toRightOf="@id/tx1"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rl1"
        android:paddingTop="15dp"
        android:id="@+id/rl2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="find and meet people around\n            you to find love"
            android:textColor="#fff"
            android:textSize="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl2"
        android:layout_marginTop="60dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
         android:id="@+id/rl3">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundbutton"
            android:drawableLeft="@drawable/facebook"
            android:text="| sign in with facebook"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:id="@+id/fb"
            android:drawableTint="#FF4081"
            android:paddingLeft="15dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundbutton"
            android:layout_below="@id/fb"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/twitter"
            android:text="| sign in with twitter"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:id="@+id/tw"
            android:drawableTint="#FF4081"
            android:paddingLeft="15dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/roundbutton"
            android:layout_below="@id/tw"
            android:layout_marginTop="40dp"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textSize="35dp"
            android:textStyle="bold"
            android:textColor="#FF4081"
            android:id="@+id/su"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/su">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALREADY REGISTERED"
                android:textColor="#fff"
                android:id="@+id/et4"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:layout_toRightOf="@id/et4"/>
        </RelativeLayout>

    </RelativeLayout>




</RelativeLayout>